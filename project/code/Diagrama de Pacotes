@startuml
package "Pacote de Usuários" {
  abstract class Usuario {
    - login : String
    - senha : String
    + autenticar(login: String, senha: String) : boolean
  }

  class Cliente {
    + getIdentificacao() : String
    + criarPedido(dados: String) : Aluguel
    + consultarPedido(id: int) : Aluguel
    + modificarPedido(id: int, dados: String) : Aluguel
  }

  class Agente {
    + modificarPedido(id: int, dados: String) : Aluguel
  }

  Cliente --|> Usuario
  Agente --|> Usuario
}

package "Pacote de Pedidos e Contratos" {
  class Aluguel {
    - cliente : Cliente
    - contrato : ContratoCredito
    - automovel : Automovel
    - statusAluguel : StatusAluguel
  }

  class ContratoCredito {
    - cliente : Cliente
    - aprovado : boolean
    - credito : double
  }

  class StatusAluguel {
    - ABERTO : int
    - EM_AVALIACAO : int
    - APROVADO : int
    - FECHADO : int
    - REPROVADO : int
  }

  Aluguel -- Cliente
  Aluguel -- ContratoCredito
  Aluguel -- Automovel
}

package "Pacote de Automóveis" {
  class Automovel {
    - matricula : int
    - ano : int
    - marca : String
    - modelo : String
    - placa : String
  }
  
  Automovel -- Aluguel
}

package "Pacote de Dados de Contratantes" {
  class EmpregoPessoa {
    - cnpjEmpregador : String
    - nomeEmpregador : String
    - renda : double
    - rendaComprovada : boolean
  }

  class Pessoa {
    - rg : String
    - cpf : String
    - nome : String
    - endereco : String
    - profissao : String
    - listEmpregadores : List<EmpregoPessoa>
    + cadastrarEmpregador(empregador: EmpregoPessoa) : boolean
  }

  class Empresa {
    - cnpj : String
    - nome : String
  }

  Pessoa -- EmpregoPessoa
  Empresa -- EmpregoPessoa
  Empresa --|> Pessoa
}

' Dependências entre pacotes
"Pacote de Pedidos e Contratos" ..> "Pacote de Dados de Contratantes" : <<import>>
"Pacote de Pedidos e Contratos" ..> "Pacote de Automóveis" : <<import>>
"Pacote de Usuários" ..> "Pacote de Pedidos e Contratos" : <<access>>
"Pacote de Automóveis" ..> "Pacote de Dados de Contratantes" : <<import>>
@enduml
